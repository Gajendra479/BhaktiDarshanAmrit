<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="60dp"
    tools:context="com.vianet.bhaktidharshanamrit.FragmentClass.Horoscope">


    <ExpandableListView
        android:id="@+id/horoscope_expandable_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ExpandableListView>

    <ProgressBar
        android:id="@+id/horoscope_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/horoscope_RefreshImage"
        android:layout_width="@dimen/image_refresh"
        android:layout_height="@dimen/image_refresh"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_refresh_image"
        android:visibility="gone" />

    <TextView
        android:id="@+id/horoscopeError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horoscope_RefreshImage"
        android:layout_centerInParent="true"
        android:visibility="gone" />


</RelativeLayout>
