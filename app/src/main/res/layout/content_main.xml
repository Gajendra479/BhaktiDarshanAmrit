<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vianet.bhaktidharshanamrit.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recycleView"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:id="@+id/main_progress_bar"
        android:visibility="visible"
        android:background="@drawable/circle_image"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="@dimen/image_refresh"
        android:id="@+id/refresh_image_main_id"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@drawable/ic_refresh_image"
        android:layout_height="@dimen/image_refresh"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/error_msg_main"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_below="@+id/refresh_image_main_id"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:padding="16dp"
        android:gravity="center"
        android:layout_height="wrap_content">


            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:id="@+id/shareFloat"
                android:visibility="gone"
                android:src="@drawable/ic_menu_share"
                android:layout_height="@dimen/float_image_size"
                android:layout_marginBottom="5dp"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:id="@+id/rateFloat"
                android:visibility="gone"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_menu_send"
                android:layout_height="@dimen/float_image_size"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:id="@+id/floatAdd"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>
