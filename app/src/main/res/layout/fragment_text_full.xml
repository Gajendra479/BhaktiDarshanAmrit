<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
              android:orientation="vertical"
             android:layout_height="match_parent"
             tools:context="com.vianet.bhaktidharshanamrit.FragmentClass.TextFullFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:id="@+id/title_text_frag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:maxLines="1"
            android:padding="5dp"
            android:paddingEnd="40dp"
            android:paddingStart="50dp"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/home_text_image"
                    android:layout_width="wrap_content"
                    android:paddingStart="10dp"
                    android:layout_height="match_parent"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_arrow_back_black_24dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center_vertical">

                <ImageView
                    android:id="@+id/home_text_share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:tint="@android:color/white"
                    android:paddingEnd="10dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_share_black_24dp"/>

            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/fulltextViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>



    <ProgressBar
        android:id="@+id/shareProgressstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>


</LinearLayout>
